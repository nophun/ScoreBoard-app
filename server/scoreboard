server {
    listen 80;
    listen [::]:80;
    server_name big2.duckdns.org www.big2.duckdns.org;

    # Redirect all HTTP to HTTPS (Certbot can also do this)
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name big2.duckdns.org www.big2.duckdns.org;

    ssl_certificate /etc/letsencrypt/live/big2.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/big2.duckdns.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 90;
    }
}